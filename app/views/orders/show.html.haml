-@title = 'Order'
%p#notice= notice

%table
  %tr
    %th Item
    %th Format
    %th Price
    %th Qty
    %th Total
  -@order.order_items.each do |item|
    %tr
      %td=item.product.title
      %td=item.format.title
      %td=number_to_currency(item.gross_price)
      %td=item.quantity
      %td=number_to_currency(item.gross_total)
  %tr
    %td{colspan: 4} Net Total
    %td=number_to_currency(@order.net_total)
  %tr
    %td{colspan: 4} VAT
    %td=number_to_currency(@order.vat_total)
  %tr
    %td{colspan: 4} Gross Total
    %td=number_to_currency(@order.gross_total)
%p
  %b Name:
  = @order.name
%p
  %b School name:
  = @order.school_name
%p
  %b Address line 1:
  = @order.address_line_1
%p
  %b Address line 2:
  = @order.address_line_2
%p
  %b Address line 3:
  = @order.address_line_3
%p
  %b Address line 4:
  = @order.address_line_4
%p
  %b Post code:
  = @order.post_code
%p
  %b Email address:
  = @order.email_address
%p
  %b Telephone:
  = @order.telephone
%p
  %b Reference:
  = @order.reference
%p
  %b Comments:
  = @order.comments

= link_to 'Edit', edit_order_path(@order)
\|
= link_to 'Back', orders_path
